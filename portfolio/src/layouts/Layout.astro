<style>
  :root {
    color-scheme: light dark;
  }

  html {
    scrollbar-width: none;
    scroll-behavior: smooth;
    font-family: system-ui, sans-serif;
  }

  body {
    background: #050505;
    display: flex;
    flex-direction: column;
    min-height: 100dvh;
  }
</style>
